extends layout

block meta
  title Citation.js Toolforge - OpenAPI 3.0
  meta(name='description', content='OpenAPI 3.0 specification for the Citation.js Toolforge API')
  link(href='./swagger-ui.css', rel='stylesheet', type='text/css')
  style.
    #swagger-ui .swagger-ui {
      max-width: none;
    }
    #swagger-ui .wrapper {
      margin-left: auto;
      margin-right: auto;
      max-width: 1000px;
    }

block content
  div#swagger-ui

  script(src='./swagger-ui-bundle.js', charset='UTF-8')
  script(src='./swagger-ui-standalone-preset.js', charset='UTF-8')
  script(src='/assets/js/swagger-initializer.js', charset='UTF-8')
